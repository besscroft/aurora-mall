<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.besscroft.aurora.mall.auth.mapper.BmsAuthUserMapper">

    <resultMap type="BmsAuthUser" id="BmsAuthUserResult">
        <result property="id" column="id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="icon" column="icon"/>
        <result property="email" column="email"/>
        <result property="phone" column="phone"/>
        <result property="nickName" column="nick_name"/>
        <result property="note" column="note"/>
        <result property="createTime" column="create_time"/>
        <result property="loginTime" column="login_time"/>
        <result property="status" column="status"/>
    </resultMap>

    <sql id="selectBmsAuthUserVo">
        select id, username, password, icon, email, phone, nick_name, note, create_time, login_time, status from bms_auth_user
    </sql>

    <select id="selectBmsAuthUserList" parameterType="BmsAuthUser" resultMap="BmsAuthUserResult">
        <include refid="selectBmsAuthUserVo"/>
        <where>
            <if test="id != null "> and id = #{id}</if>
            <if test="username != null  and username != ''"> and username like concat('%', #{username}, '%')</if>
            <if test="password != null  and password != ''"> and password = #{password}</if>
            <if test="icon != null  and icon != ''"> and icon = #{icon}</if>
            <if test="email != null  and email != ''"> and email = #{email}</if>
            <if test="phone != null  and phone != ''"> and phone = #{phone}</if>
            <if test="nickName != null  and nickName != ''"> and nick_name like concat('%', #{nickName}, '%')</if>
            <if test="note != null  and note != ''"> and note = #{note}</if>
            <if test="createTime != null "> and create_time = #{createTime}</if>
            <if test="loginTime != null "> and login_time = #{loginTime}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>

    <select id="selectBmsAuthUserById" parameterType="Long" resultMap="BmsAuthUserResult">
        <include refid="selectBmsAuthUserVo"/>
        where id = #{id}
    </select>

    <select id="selectBmsAuthUserByUsername" parameterType="String" resultMap="BmsAuthUserResult">
        <include refid="selectBmsAuthUserVo"/>
        where username = #{username}
    </select>

    <insert id="insertBmsAuthUser" parameterType="BmsAuthUser" useGeneratedKeys="true" keyProperty="id">
        insert into bms_auth_user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="username != null">username,</if>
            <if test="password != null">password,</if>
            <if test="icon != null">icon,</if>
            <if test="email != null">email,</if>
            <if test="phone != null">phone,</if>
            <if test="nickName != null">nick_name,</if>
            <if test="note != null">note,</if>
            <if test="createTime != null">create_time,</if>
            <if test="loginTime != null">login_time,</if>
            <if test="status != null">status,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="username != null">#{username},</if>
            <if test="password != null">#{password},</if>
            <if test="icon != null">#{icon},</if>
            <if test="email != null">#{email},</if>
            <if test="phone != null">#{phone},</if>
            <if test="nickName != null">#{nickName},</if>
            <if test="note != null">#{note},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="loginTime != null">#{loginTime},</if>
            <if test="status != null">#{status},</if>
        </trim>
    </insert>

    <update id="updateBmsAuthUser" parameterType="BmsAuthUser">
        update bms_auth_user
        <trim prefix="SET" suffixOverrides=",">
            <if test="username != null">username = #{username},</if>
            <if test="password != null">password = #{password},</if>
            <if test="icon != null">icon = #{icon},</if>
            <if test="email != null">email = #{email},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="nickName != null">nick_name = #{nickName},</if>
            <if test="note != null">note = #{note},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="loginTime != null">login_time = #{loginTime},</if>
            <if test="status != null">status = #{status},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteBmsAuthUserById" parameterType="Long">
        delete from bms_auth_user where id = #{id}
    </delete>

    <delete id="deleteBmsAuthUserByIds" parameterType="String">
        delete from bms_auth_user where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>