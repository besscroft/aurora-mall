<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.besscroft.aurora.mall.admin.mapper.BmsAuthRoleMapper">

    <resultMap type="com.besscroft.aurora.mall.common.entity.BmsAuthRole" id="BmsAuthRoleResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="description"    column="description"    />
        <result property="adminCount"    column="admin_count"    />
        <result property="createTime"    column="create_time"    />
        <result property="status"    column="status"    />
        <result property="sort"    column="sort"    />
    </resultMap>

    <sql id="selectBmsAuthRoleVo">
        select id, name, description, admin_count, create_time, status, sort from bms_auth_role
    </sql>

    <sql id="selectBmsAuthRoleVo2">
        select r.id, r.name, r.description, r.admin_count, r.create_time, r.status, r.sort from bms_auth_role r
    </sql>

    <select id="selectBmsAuthRoleListByAdminId" parameterType="Long" resultMap="BmsAuthRoleResult" resultSets="java.util.List">
        <include refid="selectBmsAuthRoleVo2"/>
        inner join bms_auth_user_role_relation re on r.id = re.role_id
        where re.admin_id = #{adminId}
    </select>

</mapper>